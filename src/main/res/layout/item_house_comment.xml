<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/house_comment_pic_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/pic_head_normal"/>
        <TextView
            android:id="@+id/house_comment_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username"
            android:textColor="#000000"/>
    </LinearLayout>

    <TextView
        android:id="@+id/house_comment_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="babababababab"
        android:textColor="#000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/house_comment_pic1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/house_comment_pic2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/house_comment_pic3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/house_comment_pic4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:visibility="gone"/>

    </LinearLayout>




</LinearLayout>