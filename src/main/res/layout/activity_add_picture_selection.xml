<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.lenovo.livingwhere.activity.AddPictureSelectionActivity"
    android:id="@+id/pop_linear"
    >

    <Button
        android:id="@+id/add_pic_selection_from_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="从本地相册选择"
        android:background="#4bc0ec"
        android:textColor="#ffffff"/>
    <Button
        android:id="@+id/add_pic_selection_take"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开启照相机"
        android:background="#4bc0ec"
        android:textColor="#ffffff"/>
    <Button
        android:id="@+id/add_pic_selection_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消"
        android:background="#4bc0ec"
        android:textColor="#ffffff"/>


</LinearLayout>
