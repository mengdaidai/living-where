<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/condition_pop_linear">

    <Button
        android:id="@+id/selection_condition_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="入住时间"/>
    <Button
        android:id="@+id/selection_condition_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="离开时间"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价格上限"/>
        <EditText
            android:id="@+id/selection_condition_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <Button
        android:id="@+id/selection_condition_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认"/>
    <Button
        android:id="@+id/selection_condition_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="取消"/>


</LinearLayout>