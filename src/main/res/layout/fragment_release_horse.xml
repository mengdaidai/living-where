<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_greyandwhite"
    android:orientation="vertical"
    tools:context="com.example.lenovo.livingwhere.fragment.ReleaseHouseFragment">

    <RelativeLayout
        android:id="@+id/layout_tele"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_changecity"
        android:background="@color/color_white">

        <TextView
            android:id="@+id/tv_tele"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:padding="6dp"
            android:text="联系电话"
            android:textColor="@color/color_black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/release_house_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/tv_tele"
            android:textColor="@color/color_black" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_tele"
        android:layout_marginTop="8dp"
        android:background="@color/color_white">

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:padding="6dp"
            android:text="价格"
            android:textColor="@color/color_black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/release_house_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/tv_price"
            android:textColor="@color/color_black" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_price"
        android:layout_marginTop="8dp"
        android:background="@color/color_white">

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:padding="6dp"
            android:text="类型"
            android:textColor="@color/color_black"
            android:textSize="18sp" />


        <Spinner
            android:id="@+id/release_house_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_type" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_tele"
        android:layout_marginTop="8dp"
        android:background="@color/color_white">

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:padding="3dp"
            android:text="地址:"
            android:textColor="@color/color_black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/release_house_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_address"
            android:maxLines="2"
            android:textColor="@color/color_black" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/layout_tele"
        android:background="@color/color_white">

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:padding="3dp"
            android:text="描述:"
            android:textColor="@color/color_black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/release_house_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_description"
            android:maxLines="2"
            android:textColor="@color/color_black" />

    </RelativeLayout>

    <GridView
        android:id="@+id/release_house_grid_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/comment_edittext"
        android:columnWidth="90dp"
        android:gravity="center"
        android:horizontalSpacing="5dp"
        android:numColumns="4"
        android:stretchMode="columnWidth"
        android:verticalSpacing="5dp"></GridView>

    <Button
        android:id="@+id/release_house_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_blue"
        android:text="提交" />


</LinearLayout>
